<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/sub-nav.ejs') %>
        <div class="grid">
            <article>
                <div class="form-group">
                    <label for="annualLeave">Họ Tên</label>
                    <input type="number" name="annualLeave" id="annualLeave" disabled placeholder="<%= staffs.name %>" />
                </div>
                <form action="/attendance/checkin" method="POST">
                    <div class="form-group">
                        <label for="workplace">Nơi làm việc</label>
                        <select name="workplace" id="workplace">
                            <option value="Nhà">Nhà</option>
                            <option selected value="Công Ty">Công Ty</option>
                            <option value="Khách Hàng">Khách Hàng</option>
                        </select>
                        <br /><br />
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <button class="btn" type="submit">Điểm Danh</button>
                    </div>
                </form>
            </article>
        </div>
    </main>
<%- include('../includes/end.ejs') %>