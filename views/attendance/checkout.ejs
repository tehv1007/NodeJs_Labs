<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <%- include('../includes/sub-nav.ejs') %>
                <div class="container">
                    <article>
                        <div>
                            <h4>Số giờ đã làm hôm nay:  
                                <% let totalTime = 0; staffs.workTimes.forEach(workTime => { %>
                                    <% totalTime += workTime.hours %>
                                <% }); %>
                            <%= totalTime.toFixed(2) %> h
                            </h4>
                            <h4>Danh sách các lượt bắt đầu, kết thúc</h4>
                        </div>
                        <div class="grid-container">
                            <% staffs.workTimes.forEach(workTime => { %>
                            <div class="grid-item">
                                <p><b>Nơi làm việc:</b> <%= workTime.workPlace %></p>
                                <p><b>Giờ bắt đầu làm:</b> <%= workTime.startTime.getHours() + ":" + workTime.startTime.getMinutes() + ":" + workTime.startTime.getSeconds() %></p>
                                <p><b>Giờ kết thúc làm:</b> <%= workTime.endTime.getHours() + ":" + workTime.endTime.getMinutes() + ":" + workTime.endTime.getSeconds() %></p>
                                <p><b>Tổng giờ làm:</b> <%= workTime.hours %> h</p>
                            </div>
                            <% }); %>
                        </div>
                    </article>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>